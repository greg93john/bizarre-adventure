        <div class="col-6">
          <a href="/stand-against/chapters">
            <div class="embed-responsive embed-responsive-1by1">
              <img class="embed-responsive-item rounded chapter-icon" alt="Chapter Menu Image">
            </div>
            <p>Chapters</p>
          </a>
        </div>
        <div class="col-6">
          <a href="/stand-against/characters">
            <div class="embed-responsive embed-responsive-1by1">
              <img class="embed-responsive-item rounded character-icon" alt="Character Menu Image">
            </div>
            <p>Characters</p>
          </a>
        </div>
      </div>
    </div>
  </section>
</div>
